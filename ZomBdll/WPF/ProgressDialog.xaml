<Window x:Class="System451.Communication.Dashboard.WPF.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="win" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Label Name="loading" HorizontalAlignment="Center" Content="{Binding Path=Status, ElementName=win}"></Label>
        <ProgressBar IsIndeterminate="True" Height="16" Width="200"></ProgressBar>
    </StackPanel>
</Window>
